{
  "scripts": {
    "start": "bundle exec jekyll server --ssl-cert ./cert.pem --ssl-key ./key.pem -H 0.0.0.0 --livereload-port 6281 -P 6280 --incremental",
    "watch": "rollup -c -w",
    "dev": "npm run start & npm run watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "rg -s TODO --heading --iglob '!assets/**' -g '*.{html,scss,js}' > .todo"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/eslint-plugin": "^7.12.1",
    "@babel/preset-env": "^7.12.10",
    "@rbnlffl/rollup-plugin-eslint": "^1.1.4",
    "@rollup/plugin-babel": "^5.2.2",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "husky": "^4.3.5",
    "prettier": "^2.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^7.1.0"
  },
  "dependencies": {}
}
